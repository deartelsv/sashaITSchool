<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="92dp"
    tools:context=".fragments.Stats" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textStats"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="Stats"
                android:textAlignment="center"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/textCoin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/money"
                android:textColor="#fff"
                android:text="moneyCount"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textHp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:drawableLeft="@drawable/hp"
                android:layout_weight="1"
                android:text="hpCount"
                android:textColor="#fff"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textPower"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:drawableLeft="@drawable/atack"
                android:layout_weight="1"
                android:text="powerCount"
                android:textColor="#fff"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>